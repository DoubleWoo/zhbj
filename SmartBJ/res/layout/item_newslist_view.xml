<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dip" >

    <ImageView
        android:id="@+id/iv_listitem_pic"
        android:layout_width="90dip"
        android:layout_height="65dip"
        android:layout_centerVertical="true"
        android:background="#000000"
        android:padding="1dip"
        android:scaleType="fitXY"
        android:src="@drawable/home_scroll_default" />

    <TextView
        android:id="@+id/tv_listitem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/iv_listitem_pic"
        android:lines="2"
        android:text="dsafdsalkfjdlksajflkdsajflkdsjalkfdsjaflkdsj范德萨了空间发了肯定撒减肥了肯德基撒了开房间的洒落开发的数据阿弗莱克的数据阿里开发aflkdsjaflk"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_listitem_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_listitem_title"
        android:layout_below="@id/tv_listitem_title"
        android:layout_marginTop="5dip"
        android:text="2000-10-10 10:10:10"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_news_comment_num" />

</RelativeLayout>